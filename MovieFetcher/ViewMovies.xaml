<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Padding="0,20,0,0" BackgroundColor="#3e3b3b" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieFetcher.ViewMovies">
    <AbsoluteLayout>
        <ActivityIndicator x:Name="loadingIndictor" IsRunning="False"
                           AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.5, 0.5" AbsoluteLayout.LayoutFlags="All" />
        <Button x:Name="fetchBtn" Text="Fetch JSON" Clicked="Fetch_Movies"
            AbsoluteLayout.LayoutBounds="0,1,1,50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />
    </AbsoluteLayout>
</ContentPage>